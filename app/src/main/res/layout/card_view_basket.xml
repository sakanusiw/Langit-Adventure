<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/ViewBasketCardViewLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:foregroundGravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCardKeranjangNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sansation_regular"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:text="Tenda Dome NSM 4"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/imageButtonCardKeranjangDelete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:background="@drawable/delete"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewCardKeranjang"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="@drawable/tenda_dome_nsm4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Sewa:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/sansation_regular"/>

                <TextView
                    android:id="@+id/textViewCardKeranjangTanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06/03/2024 - 08/03/2024"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/sansation_regular"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewCardKeranjangDurasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Durasi: 2 Malam"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/sansation_regular"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:text="Jumlah:"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/sansation_regular"
                        android:layout_gravity="center"/>

                    <ImageButton
                        android:id="@+id/imageButtonCardKeranjangMinus"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/minus"/>

                    <TextView
                        android:id="@+id/textViewCardKeranjangJumlah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/sansation_regular"/>

                    <ImageButton
                        android:id="@+id/imageButtonCardKeranjangPlus"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/plus"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/textViewCardKeranjangTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Biaya: Rp70.000"
                    android:textColor="@color/mainblue"
                    android:textSize="18sp"
                    android:fontFamily="@font/sansation_bold"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
